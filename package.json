{
  "name": "ihna-micro-service",
  "description": "TypeScript monorepo for all micro-service",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "format": "lerna run prettier && lerna run lint:fix",
    "prettier": "lerna run prettier",
    "check": "lerna run lint",
    "test": "lerna run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "yarn prettier",
      "yarn check"
    ]
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4"
  }
}
